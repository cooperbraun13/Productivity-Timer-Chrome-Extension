{
    "manifest_version": 3,
    "name": "Productivity Timer",
    "version": "1.0",
    "description": "A Pomodoro-style productivity timer with notifications",
    "permissions": ["notifications", "storage", "alarms"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/tomato16.jpg",
            "48": "images/tomato48.jpg",
            "128": "images/tomato128.jpg"
        }
    },
    "icons": {
        "16": "images/tomato16.jpg",
        "48": "images/tomato48.jpg",
        "128": "images/tomato128.jpg"
    },
    "background": {
        "service_worker": "background.js"
    }
}